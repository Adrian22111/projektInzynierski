{% extends 'base.html.twig' %}

{% block title %}Status{% endblock %}

{% block body %}
    <table class="table mx-auto w-4/12 border-1 shadow-xl mx-auto mt-10">
            <thead class="text-center">
                <th class="border-2">Status</th>
                <th class="border-2">Dotyczy</th>
                <th class="border-2">Opcje</th>
            </thead>
            <tbody class="text-center">
                <td class="border-2">{{ status.StatusName }}</td>
                <td class="border-2 ">
                    {% for statusOf in status.refersTo %}
                        {{ statusOf }}
                    {% endfor %}
                </td>
                <td class="border-2">
                    <a href="{{ path('app_status_index') }}"><div class="border-2 bg-yellow-500 w-full hover:bg-yellow-400 text-white" >Lista Status√≥w</div></a>
                    <a href="{{ path('app_status_edit', {'id': status.id})}}"><div class="border-2 bg-yellow-500 w-full hover:bg-yellow-400 text-white" >Edytuj</div></a>
                    {{ include('status/_delete_form.html.twig') }} 
                </td>

            </tbody>
    </table>
{% endblock %}
