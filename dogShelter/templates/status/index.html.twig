{% extends 'base.html.twig' %}

{% block title %}Status index{% endblock %}

{% block body %}
<div class="flex-col mt-10">
    <div class="text-2xl text-center mb-2 ">Posty</div>
    <div class="text-xl text-center mb-2 text-green-500 hover:text-green-400"><a href="{{path('app_status_new')}}">Dodaj Nowy Status</a></div>
    <table class="table mx-auto w-4/12 border-1 shadow-xl mx-auto ">
        <thead class="text-center">
            <tr>
                <th class="border-2">Id</th>
                <th class="border-2">Status</th>
                <th class="border-2">Może Dotyczyć</th>
                <th class="border-2">Opcje</th>
            </tr>
        </thead>
        <tbody class="text-center align-top">
        {% for status in statuses %}
            <tr>
                <td class="border-2">{{ status.id }}</td>
                <td class="border-2">{{ status.StatusName }}</td>
                <td class="border-2 ">
                    {% for statusOf in status.refersTo %}
                        {% if statusOf == 'case' %}
                            <div>{{'sprawy'}}</div>
                        {% elseif statusOf == 'dog' %}
                            <div>{{'psa'}}</div>
                        {% elseif statusOf == 'user' %}
                            <div>{{'użytkownika'}}</div>
                        {% elseif statusOf == 'document' %}
                            <div>{{'dokumentu'}}  </div>
                        {% elseif statusOf == 'post' %}
                            <div>{{'postu'}}</div>
                        {% else %}
                            <div>{{'brak informacji'}}  </div>                 
                        {% endif %}
                    {% endfor %}
                </td>
                <td class="border-2">
                    <div class="border-2 bg-yellow-500 w-full hover:bg-yellow-400 text-white"><a href="{{ path('app_status_show', {'id': status.id}) }}">Pokaż</a></div>
                    <div class="border-x-2 border-b-2 bg-yellow-500 w-full hover:bg-yellow-400 text-white"><a href="{{ path('app_post_edit', {'id': status.id}) }}">Edytuj</a></div>
                    <div>{{ include('status/_delete_form.html.twig') }}</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
