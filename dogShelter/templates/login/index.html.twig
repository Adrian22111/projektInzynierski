{% extends 'base.html.twig' %}

{% block body %}

<form class="flex-col w-1/3 mx-auto justify-center text-center mt-10 border-2 rounded-md border-black" action ="{{path('app_login')}}" method="POST">
        <div class=" ">
            <label class="block my-2">Nazwa Użytkownika</label>
            <input class="block mx-auto w-1/2 text-center border-2 rounded-md border-black" type="text" name="_username" value ="{{lastUsername}}"/>        
        </div>
        <div class="block ">
            <label class="block my-2">Hasło</label>
            <input class="block mx-auto w-1/2 text-center border-2 rounded-md border-black" type="password" name="_password"/>
        </div>
        {% if error %}
            <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <input type="hidden" name="_target_path" value="/main/page"/>
        <button type="submit" class="w-32 my-2 bg-green-500 hover:bg-green-400 rounded-md text-white">Zaloguj się</button>
</form>
{% endblock %}


